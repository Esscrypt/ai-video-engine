{
  "name": "viralvector-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": ["config/*", "packages/**", "apis/**", "apps/*"]
  },
  "scripts": {
    "dev": "turbo run dev --cache=local:r,remote:r --parallel --continue",
    "dev:web": "turbo watch dev --filter @viralvector/web",
    "dev:api": "turbo watch dev --filter @viralvector/server-api",
    "dev:worker": "turbo watch dev --filter @viralvector/chain-worker",
    "start": "turbo run start --filter @viralvector/web",
    "build": "turbo run build --cache=local:r,remote:r --concurrency=100%",
    "build:apis": "turbo run build --cache=local:r,remote:r --filter='./apis/*'",
    "build:apps": "turbo run build --cache=local:r,remote:r --filter='./apps/*'",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format . --write",
    "check": "turbo run check --cache=local:r,remote:r --concurrency=100%",
    "check:apis": "turbo run check --cache=local:r,remote:r --filter='./apis/*'",
    "check:apps": "turbo run check --cache=local:r,remote:r --filter='./apps/*'",
    "prepare": "lefthook install",
    "db:generate": "bun run --cwd packages/db db:generate",
    "db:migrate": "bun run --cwd packages/db db:migrate"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@viralvector/common": "workspace:*",
    "@viralvector/db": "workspace:*",
    "@viralvector/server-api": "workspace:*",
    "bun-plugin-tailwind": "^0.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.545.0",
    "react": "^19",
    "react-dom": "^19",
    "@simplewebauthn/browser": "^13.2.0",
    "@simplewebauthn/server": "^13.2.1",
    "stripe": "^18.5.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@viralvector/typescript-config": "workspace:*",
    "@biomejs/biome": "^2.1.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4",
    "lefthook": "^1.12.2",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.4.0",
    "turbo": "^2.7.1",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.3.7"
}
