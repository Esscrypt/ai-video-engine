{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI", "DEBUG", "NODE_ENV", "DATABASE_URL", "PORT"],
  "globalDependencies": [".env.example", "tsconfig.json", "package.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*", "bin/**/*"],
      "cache": true
    },
    "build:bin": {
      "dependsOn": ["^build"],
      "outputs": ["bin/**/*"],
      "cache": true
    },
    "check": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
