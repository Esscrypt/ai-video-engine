{
  "name": "@viralvector/server-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./api": "./src/api.ts"
  },
  "scripts": {
    "build": "bun run build:bin",
    "build:bin": "bun build src/index.ts --compile --outfile ./bin/server --sourcemap --minify-whitespace --minify-syntax --target bun",
    "check": "bun run --cwd ../.. typecheck",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf bin",
    "dev": "bun run src/index.ts",
    "start": "bun run src/index.ts"
  },
  "devDependencies": {
    "@viralvector/typescript-config": "workspace:*"
  }
}
